<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/dialog_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="300dp">
        <RadioGroup
            android:id="@+id/dialog_radio_group"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <RadioButton
                android:id="@+id/dialog_radio_url1"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="테스트" />

            <RadioButton
                android:id="@+id/dialog_radio_url2"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="테스트2" />

            <RadioButton
                android:id="@+id/dialog_radio_url3"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignBottom="@+id/dialog_radio_group"
            android:layout_marginLeft="30dp">

            <EditText
                android:id="@+id/dialog_radio_url3_real_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="직접입력"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/dialogConfirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="입력"/>
        <Button
            android:id="@+id/dialogDismiss"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="취소"/>
    </LinearLayout>
</LinearLayout>
